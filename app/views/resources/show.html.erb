<h1><%= @resource.name %></h1>

<% if current_user %>
  <% if @current_favorite %>
    <%= button_to "Remove from favorites", resource_favorite_path(@resource, @current_favorite), method: :delete, class: "btn btn-danger btn-sm" %></h1>
  <% else %>
    <%= button_to "Add to favorites!", resource_favorites_path(@resource), class: "btn btn-success btn-sm" %>
  <% end %>
<% end %>

<% if current_user_admin? %>
  <%= link_to "Edit", edit_resource_path(@resource) %> | 
  <%= link_to "Delete", resource_path(@resource), method: :delete %>
<% end %>

<h3>Description</h3>
<p>
  <%= @resource.description %>
</p>

<%= link_to "Write a review", new_resource_review_path(@resource) %> |
<%= link_to "See All Reviews", resource_reviews_path(@resource) %>

