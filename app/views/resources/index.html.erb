<h3><%= pluralize(@resources.size, 'Resource') %></h3>

<table class="table resources">
  <thead>
    <tr> 
      <th>Resource</th>
      <th>Description</th>
      <th>Average Rating</th>
    </tr>
  </thead>
  <tbody>
  <% @resources.each do |resource| %>
    <tr>
      <td><%= link_to resource.name, resource_path(resource) %></td>
      <td><%= resource.description %></td>
      <td><%= format_average_rating(resource) %></td>
    </tr>
  </tbody>
<% end %>
</table>
