<h1>Review for: <%= @resource.name %></h1>

<%= form_for([@resource, @review]) do |f| %>
  <%= render 'shared/errors', object: @review %>
  <p>
    <%= f.label :comment %>
    <%= f.text_area :comment, autofocus: true, cols: 40, rows: 5, class: "form-control" %>
  </p>
  <p>
    <%= f.label :rating %>
    <%= f.number_field :rating, class: "form-control" %>
  </p>
  <p>
    <%= f.submit "Post Review" %> <span><%= link_to "Cancel", resource_reviews_path(@resource) %></span>
  </p>
<% end %>
