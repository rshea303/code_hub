<h1>Reviews for: <%= link_to @resource.name, resource_path(@resource) %></h1>

<ol class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <p>
        <%= pluralize(review.rating, 'star') %> by <%= link_to review.user.name, user_path(review.user) %>
      </p>
      <p>
        <%= review.comment %>
      </p>
    </li>
  <% end %>
</ol>
