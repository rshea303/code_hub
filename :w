class Resource < ActiveRecord::Base
  validates :name, :link, :description, :rating, presence: true
  validates :rating, inclusion: { in: (0..5) }
  validates :description, length: { maximum: 200 }

  def poor?
    self.rating < 3
  end

  def self.popular
    where("rating >= ?", 3).order(rating: :desc)
  end
end
